{   
    "type": "object",
    "properties": {
        "session_name": {
            "description": "The session name of the curation process, given by the user or created by Stable ID",
            "type": "string"
        },
        "locus": {
            "description": "Gene name",
            "type": "string"
        },
        "publications": {
            "description": "Publication attached to this LGD",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pmid": {
                        "type": ["number", "string"]
                    },
                    "source": {
                        "type": "string"
                    },
                    "families":{
                        "type": ["number", "null"]
                    },
                    "affectedIndividuals": {
                        "type": ["number", "null"]
                    },
                    "ancestries": {
                        "type": "string"
                    },
                    "consanguineous": {
                        "type": "string"
                    },
                    "comment": {
                        "type": "string"
                    },
                    "year": {
                        "type": "number"
                    },
                    "title": {
                        "type": "string"
                    },
                    "authors": {
                        "type": "string"
                    }
                },
                "required": ["pmid"]
            }
        },
        "phenotypes": {
            "description" : "Phenotypes attached to this LGD using the publication",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pmid": {
                        "type": ["number", "string"]
                    },
                    "summary": {
                        "type": "string"
                    },
                    "hpo_terms": {
                        "type": "array"
                    }
                },
                "required": ["pmid", "hpo_terms"]
            }
        },
        "allelic_requirement": {
            "description" : "Allelic requirement/genotype associated with this LGD",
            "type": "string"
        },
        "cross_cutting_modifier": {
            "description": "Inheritance modifiers",
            "type": "array"
        },
        "variant_types": {
            "description": "The variant types associated with this LGD",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "primary_type": {
                        "type": "string"
                    },
                    "secondary_type": {
                        "type": "string"
                    },
                    "nmd_escape": {
                        "type": "boolean"
                    },
                    "de_novo": {
                        "type": "boolean"
                    },
                    "inherited": {
                        "type": "boolean"
                    },
                    "unknown_inheritance": {
                        "type": "boolean"
                    },
                    "supporting_papers": {
                        "type": "array",
                        "items": {
                            "type": ["number", "string"]
                        }
                    },
                    "comment": {
                        "type": "string" 
                    }
                },
                "required": ["supporting_papers"]
            }
        },
        "variant_description": {
            "description": "Variant description",
            "type" : "array",
            "items": {
                "type": "object",
                "properties": {
                    "publication": {
                        "type": ["number", "string"]
                    }, 
                    "description":{
                        "type": "string"
                    }
                }
            }
        },
        "variant_consequence": {
            "description": "Variant consequence associated with this description",
            "type": "array",
            "items":{
                "type": "object",
                "properties": {
                    "variant_consequence": {
                        "type": "string"
                    },
                    "support": {
                        "type": "string"
                   }
                }
            }
        },
        "molecular_mechanism": {
            "description": "Molecular mechanism",
            "type": "object",
            "properties":{
                "name": {
                    "type": "string"
                },
                "support" :{
                    "type": "string"
                }
            }
        },
        "mechanism_synopsis": {
            "description": "Synopsis of the mechanism",
            "type": "object",
            "properties":{
                "name":  {
                    "type": "string"
                },
                "support": {
                    "type": "string"
                }
            }
        },
        "mechanism_evidence": {
            "description": "Evidence of the mechanism associated with this record",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pmid": {
                        "type": ["number", "string"]
                    },
                    "description": {
                        "type": "string"
                    },
                    "evidence_types" : {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "primary_type": {
                                    "type": "string"
                                },
                                "secondary_type": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        } 
                    }
                }
            } 
        },
        "disease": {
            "type": "object",
            "properties": {
                "disease_name": {
                    "type": "string" 
                },
                "cross_references": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "original_disease_name": {
                                "type": "string"
                            },
                            "disease_name": {
                                "type": "string"
                            },
                            "identifier": {
                                "type": ["number", "string"]
                            },
                            "source": {
                                "type": "string"
                            }
                        }
                    } 

                }
            },
            "required": ["disease_name"]
        },
        "panel": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }, 
        "confidence": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "string"
                }
            },
            "required": ["level"]
        },
        "public_comment": {
            "description": "General comment linked to the record available to the public",
            "type": "string"
        },
        "private_comment": {
            "description": "General comment linked to the record only available to authenticated users",
            "type": "string"
        }
    },
    "required": ["locus"]
}